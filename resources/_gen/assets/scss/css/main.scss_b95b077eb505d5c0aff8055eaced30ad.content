@font-face{font-family:syne;src:url(/fonts/Syne-Extra.woff2)format("woff2"),url(/fonts/Syne-Extra.woff)format("woff")}@font-face{font-family:term;src:url(/fonts/terminus.woff2)format("woff2"),url(/fonts/terminus.woff)format("woff")}@font-face{font-family:cmu serif;src:url(/fonts/computer-modern.woff2)format("woff2"),url(/fonts/computer-modern.woff)format("woff")}html{box-sizing:border-box}@media(min-width:960px){html{font-size:125%}}*,*::before,*::after{box-sizing:inherit}body{margin:0;color:#222;background:#fefefe;font-family:cmu serif,Baskerville,Times,serif;font-size:1rem;line-height:1.5}main,footer{padding:2rem;max-width:1440px;margin:0 auto}article{max-width:40em;margin:auto}.text{margin-top:3rem}p{margin:1rem auto 1.5rem}h1,h2{font-family:syne;line-height:1.25;color:#0d0d0d}h1{margin-top:0;font-size:1.999rem}@media(min-width:960px){h1{font-size:3.998rem}}h2{font-size:1rem;margin-top:2em;margin-bottom:1em;width:80%}@media(min-width:960px){h2{font-size:1.999rem}}h3{font-weight:inherit;text-transform:uppercase;letter-spacing:.06em}pre,code{background-color:#111;padding:.707rem;color:#f2f2f2;display:block;font-family:term,monospace;white-space:pre-wrap}code{border-radius:.5rem;margin:1.5rem auto}pre{border-radius:1rem;font-size:.707rem;margin:3rem auto 4.5rem}.toast{padding:1rem 0;margin-bottom:-4rem;background:#1e90ff;color:rgba(255,255,255,.9);font-family:system-ui;transform:translateY(-100%);transition:all 600ms ease}.toast__inner{margin:0 2rem}@media(min-width:960px){.toast__inner{height:100%;display:flex;align-items:center;justify-content:space-between;max-width:40em;margin:auto}}@media(max-width:960px){.toast__inner span{display:block}}.toast__actions{list-style-type:none;padding:0;margin:1rem 0 0}.toast__actions li{display:inline-block;text-decoration:underline;cursor:pointer}.toast__actions li:not(:last-child){margin-right:.5rem}@media(min-width:960px){.toast__actions{margin:0}}.toast-active{transform:translateY(0);margin-bottom:1rem}progress{position:fixed;left:0;top:0;width:100%;height:.5rem;appearance:none;border:none;background-color:#fff;color:#1e90ff}progress::-webkit-progress-bar{background-color:#fff}progress::-webkit-progress-value{background-color:#1e90ff}progress::-moz-progress-bar{background-color:#1e90ff}footer{margin-top:4.5rem;background:#f5f5f5;font-family:system-ui;font-size:.707rem}.copyright{width:100%;max-width:40rem;margin:auto}